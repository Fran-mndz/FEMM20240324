@model IEnumerable<FEMM20250324.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Agregar Marca";
}

<h1>Marcas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar marca</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                <!--

                @Html.DisplayNameFor(model => model.BrandName)
                -->
                Marca
            </th>
            <th>
                <!--
                @Html.DisplayNameFor(model => model.Country)
                -->
                Pais
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function() {
             $('#myTable').DataTable({
               "language":languageTable
             });
        });
    </script>
}
